<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/plats_frame"
        android:layout_width="600dp"
        android:layout_height="128dp"
        android:layout_marginTop="131dp"
        android:layout_marginBottom="701dp"
        android:background="#eff0f1"
        android:src="@drawable/plats_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/plat1"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="713dp"
        android:background="#ffd48f"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plat2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <ImageView
        android:id="@+id/plat2"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="713dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plat3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plat1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <ImageView
        android:id="@+id/plat3"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="713dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/plat4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plat2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <ImageView
        android:id="@+id/plat4"
        android:layout_width="106dp"
        android:layout_height="106dp"
        android:layout_marginTop="141dp"
        android:layout_marginBottom="713dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/plat3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/burger" />

    <TextView
        android:id="@+id/tv_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Score : 0"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.465"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_welldone" />

    <ProgressBar
        android:id="@+id/pb_timer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="313dp"
        android:layout_height="13dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="310dp"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="637dp"
        android:max="100"
        android:progress="50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/action1"
        android:layout_width="327dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbAction1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pb_timer" />

    <TextView
        android:id="@+id/action2"
        android:layout_width="327dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbAction2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action1" />

    <TextView
        android:id="@+id/action3"
        android:layout_width="327dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbAction3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action2" />

    <TextView
        android:id="@+id/action4"
        android:layout_width="327dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:text="TextView"
        android:textSize="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/cbAction4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action3" />

    <CheckBox
        android:id="@+id/cbAction1"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action1"
        app:layout_constraintTop_toTopOf="@+id/action1" />

    <CheckBox
        android:id="@+id/cbAction2"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action2"
        app:layout_constraintTop_toTopOf="@+id/action2" />

    <CheckBox
        android:id="@+id/cbAction3"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action3"
        app:layout_constraintTop_toTopOf="@+id/action3" />

    <CheckBox
        android:id="@+id/cbAction4"
        android:layout_width="wrap_content"
        android:layout_height="51dp"
        android:layout_marginEnd="20dp"
        android:enabled="false"
        android:textSize="32dp"
        app:layout_constraintEnd_toStartOf="@+id/action4"
        app:layout_constraintTop_toTopOf="@+id/action4" />


    <ImageView
        android:id="@+id/plat_courant_frame"
        android:layout_width="126dp"
        android:layout_height="126dp"
        android:layout_marginStart="31dp"
        android:layout_marginTop="131dp"
        android:layout_marginEnd="443dp"
        android:layout_marginBottom="703dp"
        android:src="@drawable/plat_courant_frame"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_sadOrHappy"
        android:layout_width="93dp"
        android:layout_height="93dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="267dp"
        android:layout_marginBottom="164dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/action4"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_welldone"
        android:layout_width="wrap_content"
        android:layout_height="21dp"
        android:layout_marginStart="255dp"
        android:layout_marginEnd="287dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_sadOrHappy" />

</android.support.constraint.ConstraintLayout>